<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context="com.example.fangyuanzheng.schoolday.LoginActivity">

    <ImageView
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:src="@drawable/web_hi_res_512"
        android:elevation="50dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_email"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.506"
        android:id="@+id/imageView4" />

    <Button
        style="@style/RemoteButtonImproved"
        android:id="@+id/login"
        android:layout_width="180dp"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/com_facebook_button_login_silver_background"
        android:text="login"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.04" />

    <Button
        style="@style/RemoteButtonImproved"
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="26dp"
        android:background="@drawable/com_facebook_button_login_silver_background"
        android:text="create using email"
        android:textSize="10sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        style="@style/RemoteButtonImproved"
        android:id="@+id/loginByOtherMethod"
        android:layout_width="180dp"
        android:layout_height="26dp"
        android:layout_marginEnd="164dp"
        android:background="@drawable/com_facebook_button_login_silver_background"
        android:text="login by Other Method"
        android:textSize="10sp"
        android:layout_marginRight="164dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintTop_toTopOf="@+id/button"
        android:layout_marginTop="3dp" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/textcolor2"
        app:layout_constraintRight_toRightOf="@+id/edit_text_email"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="195dp" />

    <TextView
        android:text="PassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor2"

        android:id="@+id/textView"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/edit_text_password"
        android:layout_marginLeft="8dp" />

    <EditText
        android:layout_width="344dp"
        android:layout_height="0dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/textcolor2"

        android:ems="10"
        android:id="@+id/edit_text_email"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor2"

        android:id="@+id/textView2"
        app:layout_constraintRight_toLeftOf="@+id/edit_text_email"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_email"
        app:layout_constraintTop_toTopOf="@+id/edit_text_email"
        android:layout_marginTop="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>
