<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.fangyuanzheng.schoolday.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="290dp"
        android:layout_height="340dp"
        android:scaleType="fitStart"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="280dp"
        android:src ="@drawable/temperature"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/weatherIconImageView"
        android:scaleType="fitCenter"
        android:src="@drawable/na"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="290dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/temperatureTextView"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="380dp"
        android:textSize="28sp"
        android:text="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/conditionTextView"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="380dp"
        android:text="Condition"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/locationTextView"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="480dp"
        android:textSize="12sp"

        android:text="Location"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:id="@+id/yahooIconImageView"
        android:scaleType="fitCenter"
        android:src="@drawable/yahoo_logo"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="390dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="190dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/mytime" />

    <TextView
        android:id="@+id/DateTextView"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="185dp"
        android:text="MonDay"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/TimetextView"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="105dp"
        android:text="10:00"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="26sp" />

</FrameLayout>
